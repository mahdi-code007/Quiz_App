<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
    
    <style name="quiz_option_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">"Option Button"</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="result_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="result_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>